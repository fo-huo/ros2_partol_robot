<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >
<xacro:include filename="$(find fengbot_description)/urdf/fengbot/common_inertia.xacro"/>


<!-- 机器人的imu部件，惯性测量传感器 -->
<xacro:macro name="wheel_xacro"  params="wheel_name xyz"  >
<link name="${wheel_name}_link">
     <!-- 部件外观描述 -->
     <visual>
      <!--坐标系沿着自己几何中心的偏移和旋转量 -->
        <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
        <!-- 几何形状 -->
        <geometry>
               <cylinder radius="0.032" length="0.04"/>
        </geometry>
        
        <!-- 材质颜色 -->
        <material name="yellow">
            <color rgba="1.0 1.0 0.0 0.8"/>
        </material>
     </visual>  
     <collision>
           <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
        <!-- 几何形状 -->
        <geometry>
               <cylinder radius="0.032" length="0.04"/>
        </geometry>
        
        <!-- 材质颜色 -->
        <material name="yellow">
            <color rgba="1.0 1.0 0.0 0.8"/>
        </material>
     </collision>
     <xacro:cylinder_inertia m="0.05" r="0.032" h="0.04"/>
    </link>


    <!-- 机器人的关节 用于组合机器人的部件-->
    <joint name="${wheel_name}_joint" type="continuous">
        <parent link="base_link"/>
        <child link="${wheel_name}_link"/>
        <origin xyz="${xyz}" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <gazebo reference="${wheel_name}_link">
      <mu1 value="20.0"/>
      <mu2 value="20.0"/>
      <kp value="1000000000.0"/>
      <kd value="1.0"/>
    </gazebo>

</xacro:macro>

</robot>